<div class="container-sm">
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <h3 class="navbar-brand">Pessoas</h3>

            <ul class="nav">
                <li class="nav-item">
                    <a class="btn btn-sm btn-primary mx-2" href="/pessoa/cadastro"><i class="fa-solid fa-plus"></i>Novo</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-sm btn-secondary" href="/" ><i class="fa-solid fa-angle-left"></i>Voltar</a>
                </li>
            </ul>
        </div>
    </nav>

    <table class="table table-striped">
        <tr>
            <th class="col-1">Nome</th>
            <th class="col-5">Telefone</th>
            <th class="col-2">E-mail</th>
            <th class="col-2">CPF</th>

        </tr>
        
        {{#each pessoas}}
            <tr>
                <td>{{id}}</td>
                <td>{{nome}}</td>
                <td>{{telefone}}</td>
                <td>{{email}}</td>
                <td>{{cpf}}</td>
            </tr>
        {{/each}}

    </table>

</div>